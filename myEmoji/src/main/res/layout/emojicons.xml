<com.hbconsulting.emojicon.EmojiconsPopup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/aunties"
            android:gravity="center_vertical"
            android:textColor="@color/front_color"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/emojis_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/emojis_tab"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/emojis_tab_0"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emoji_tab_0" />


            <ImageButton
                android:id="@+id/emojis_tab_1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emoji_tab_1" />



            <ImageButton
                android:id="@+id/emojis_tab_2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emoji_tab_2" />


            <ImageButton
                android:id="@+id/emojis_tab_3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emoji_tab_3" />


            <ImageButton
                android:id="@+id/emojis_tab_4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emoji_tab_4" />



            <ImageButton
                android:id="@+id/emojis_tab_5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emoji_tab_5" />

            <ImageButton
                android:id="@+id/emojis_backspace"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emoji_backspace_button" />

        </LinearLayout>


    </LinearLayout>

</com.hbconsulting.emojicon.EmojiconsPopup>